<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">52dp</item>
        <item name="fontFamily">@font/sheriff_bounce</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">2dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">6dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Answers">
        <item name="android:background">@drawable/bg_place_answer</item>
    </style>

    <style name="Button.Variant">
        <item name="android:background">@drawable/bg_btn_variant</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>